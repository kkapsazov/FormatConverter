@model Dictionary<string, string>

@{
    ViewBag.Title = "Files";
    Layout = "_Layout";
}

@foreach (var (fileName, fileContent) in Model)
{
    <div>
        <div>            
            <h2>@fileName</h2>
            <textarea rows="10" cols="100" data-file-name="@fileName">@fileContent</textarea>
        </div>
        <div>
            <a href="" class="download-btn btn btn-primary" role="button" download="@fileName">Download</a>
        </div>
    </div>
}

@if (Model.Count == 0)
{
    <div>
        <p>No files to show.</p>
    </div>
}
